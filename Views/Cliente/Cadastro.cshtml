<h2>Cadastro de Clientes</h2>
<hr />

@model ClienteViewModel
@{
    var disabled = (Model.codigo == null) ? "disabled" : string.Empty;
}
<form asp-controller="Cliente" asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="codigo" value="@Model.codigo" />
    <div class="form-group">
        <div class="col-4">
            <label>Nome:</label>
            <input type="text" asp-for="nome" value="@Model.nome" class="form-control" />
            <span asp-validation-for="nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-4">
                <label>Celular:</label>
                <input type="text" asp-for="celular" value="@Model.celular" class="form-control" />
                <span asp-validation-for="celular" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-4">
                    <label>CPF:</label>
                    <input type="text" asp-for="cpf" value="@Model.cpf" class="form-control" />
                    <span asp-validation-for="cpf" class="text-danger"></span>
                </div>
                <br />

                <div class="col">
                    <button onclick="Novo()" type="button" class="btn btn-info">Nova</button>
                    <button type="submit" class="btn btn-success">Gravar</button>
                    <button onclick="Listagem()" type="button" class="btn btn-warning">Listagem</button>
                    <button onclick="Excluir(@Model.codigo)" type="button" class="btn btn-danger" @disabled>Excluir</button>
                </div>
            </div>
</form>

<script>

    function Novo() {
        window.location = window.origin + "\\Cliente\\Cadastro";
    }

    function Listagem() {
        window.location = window.origin + "\\Cliente";
    }

    function Excluir(Codigo) {
        window.location = window.origin + "\\Cliente\\Excluir\\" + Codigo;
    }
</script>

