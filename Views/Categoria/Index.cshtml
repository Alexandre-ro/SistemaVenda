@model List<SistemaVenda.Entidades.Categoria>

<div class="text-center">
    <div>
        <h2>Categorias</h2>
        <div class="float-left">
            <button onclick="Cadastrar()" type="button" class="btn btn-primary" style="margin-bottom:10px">Adicionar Categoria</button>
        </div>        
        <table class="table table-striped">
            <thead style="background-color:#a29bfe; color:aliceblue;">
                <tr>
                    <th><b>Código</b></th>
                    <th><b>Descrição</b></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="Editar(@item.codigo)" style="cursor:pointer">
                        <td>@item.codigo.ToString().ToUpper()</td>
                        <td>@item.descricao.ToString().ToUpper()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>

    function Cadastrar()
    {
        window.location = window.origin + "\\Categoria\\Cadastro";
    }

    function Editar(Codigo)
    {
        window.location = window.origin + "\\Categoria\\Cadastro\\" + Codigo;
    }

</script>
